  },
  "scripts": {
    "lint": "eslint src/**/*.ts test/**/*.js",
    "clean": "rimraf dist",
    "compile": "tsc",
    "copy-templates": "copyfiles \"./templates/**/*.*\" dist",
    "reinstall": "npm uninstall -g create-testcafe && npm i -g",
    "fast-build": "npm run clean && npm run compile && npm run copy-templates && npm run reinstall",
    "build": "npm run lint && npm run fast-build",
    "test-mocha": "npx mocha 'test/**/*test.js'",
    "test": "npm run build && npm run test-mocha"
  },
